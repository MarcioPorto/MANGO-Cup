<p id="notice"><%= notice %></p>

<br>

<h1><strong><%= @player.name %></strong></h1>

<p>
  <strong>Record: </strong><%= @player.won %> - <%= @player.lost %>
</p>

<hr>
<h3>Matches</h3>
<br>
<% @player.matches.order(time: :asc).each do |match| %>
  <%= link_to match do %>
    <div class="col-md-4 text-center">
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th class="text-center"><%= Player.find(match.players[0]).name %></th>
            <th colspan="1"></th>
            <th class="text-center"><%= Player.find(match.players[1]).name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= match.player_1_score %></td>
            <td> x </td>
            <td><%= match.player_2_score %></td>
          </tr>
          <tr>
            <%= match.time.to_formatted_s(:long)  %>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>

<br>
<br>

