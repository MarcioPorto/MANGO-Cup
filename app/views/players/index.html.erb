<p id="notice"><%= notice %></p>

<br>

<h1>All Players</h1>

<br>
<br>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Won</th>
      <th>Lost</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= player.won %></td>
        <td><%= player.lost %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
