<h2 class="text-center">
	<%= @player1.name + ' (' + @player1.won.to_s + '-' + @player1.lost.to_s + ')' %> vs.
	<%= @player2.name + ' (' + @player2.won.to_s + '-' + @player2.lost.to_s + ')' %>
</h2>

<br><br>

<div class="row">
	<div class="col-md-4 col-md-offset-4 text-center">
	  <table class="table table-striped table-hover text-center">
	    <thead>
	      <tr>
	        <th class="text-center"><%= Player.find(@match.players[0]).name %></th>
	        <th colspan="1"></th>
	        <th class="text-center"><%= Player.find(@match.players[1]).name %></th>
	      </tr>
	    </thead>
	    <tbody>
	      <tr>
	        <td><%= @match.player_1_score %></td>
	        <td> x </td>
	        <td><%= @match.player_2_score %></td>
	      </tr>
	      <tr>
	        <%= @match.time.to_formatted_s(:long)  %>
	      </tr>
	    </tbody>
	  </table>
	</div>
</div>

<br>

<%= link_to 'Back', matches_path %>
